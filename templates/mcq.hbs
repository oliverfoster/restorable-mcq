<div class="mcq-inner component-inner" role="region" aria-label="{{_accessibility._ariaRegions.mcq}}" {{#if _accessibility._ariaRegions.mcq}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="mcq-widget component-widget {{#unless _isEnabled}} disabled {{#if _isComplete}} complete submitted show-user-answer {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        <form>
            {{#each _items}}
                <div class="mcq-item component-item component-item-color {{#unless ../_isEnabled}} {{#if _isCorrect}} correct{{else}} incorrect{{/if}} {{/unless}} item-{{@index}}">
                <input type="checkbox" name="{{../_id}}" id="{{../_id}}-{{@index}}" aria-labelledby="{{../_id}}-{{@index}}-aria" title="{{text}}"/>
                <label  id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" class="component-item-text-color component-item-border{{#if _isSelected}} selected{{/if}}">
                    <div class="mcq-item-state">
                        <div class="mcq-item-icon mcq-answer-icon {{#if ../_isRadio}}radio{{else}}checkbox{{/if}} component-item-text-color icon"></div>
                        <div class="mcq-item-icon mcq-correct-icon icon icon-tick"></div>
                        <div class="mcq-item-icon mcq-incorrect-icon icon icon-cross"></div>
                    </div>
                    <h5 class="mcq-item-inner">
                        {{{text}}}
                    </h5>
                </label>
                </div>
            {{/each}}
        </form>
    </div>
    <div class="buttons">
    </div>
</div>
